<html>
  <head>
    <title>Item List</title>
    <link type="text/css" rel="stylesheet" href="<%= URI('style.css') %>"/>
  </head>

  <body>
  <h1 class="cyan-background">Categories</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>ID</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= category.id %></td>
            <td class="icon">
            <td><a href="/categories/<%= category.id %>">Show Details</a></td>
            <td><a href="/categories/<%= category.id %>/edit">Edit</a></td>
            <td><a href="/categories/<%= category.id %>/delete"><button type="submit">Delete</button></a></td>
            </td>
          </tr>
        <% end %>
      </tbody>

    </table>
    <a href="/categories/create">Create New Category</a>
    <br><br><a href="/"><button>Back</button></a>
  </body>
</html>
